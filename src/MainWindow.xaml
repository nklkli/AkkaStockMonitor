<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:oxy="http://oxyplot.org/wpf"

        Title="MainWindow" Height="720" Width="600">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="620"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <oxy:PlotView  x:Name="Chart"  Margin="10" Grid.Row="0" />

            <StackPanel Grid.Row="1" Orientation="Horizontal" >
                <Button Content="AAAA" x:Name="AAAA"  
                         Width="100" Click="Button_Click"></Button>

                <Button Content="BBBB"  x:Name="BBBB" 
                       Width="100" Click="Button_Click_1"></Button>

                <Button Content="CCCC"  x:Name="CCCC" 
                       Width="100" Click="Button_Click_2"></Button>

            </StackPanel>

        </Grid>
    </Grid>


</Window>
